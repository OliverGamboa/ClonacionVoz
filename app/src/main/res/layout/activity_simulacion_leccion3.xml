<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="#FFF8E1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📞 Escenario simulado: voz clonada con respuestas repetitivas\n\nUn supuesto familiar llama con urgencia y evita responder preguntas personales. Escuche con atención."
            android:textSize="22sp"
            android:textStyle="italic"
            android:textColor="#4E342E"
            android:layout_marginBottom="32dp"
            android:justificationMode="inter_word" />

        <Button
            android:id="@+id/btnReproducirAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔊 Reproducir llamada simulada"
            android:textSize="22sp"
            android:backgroundTint="#689F38"
            android:textColor="#FFFFFF"
            android:padding="18dp"
            android:layout_marginBottom="36dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Qué haría usted en esta situación?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#33691E"
            android:layout_marginBottom="24dp" />

        <!-- Opción 1 -->
        <Button
            android:id="@+id/btnOpcion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confiar en la voz porque suena igual"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:backgroundTint="#607D8B"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feedbackOpcion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#D32F2F"
            android:layout_marginBottom="20dp" />

        <!-- Opción 2 -->
        <Button
            android:id="@+id/btnOpcion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pedir más datos e insistir"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:backgroundTint="#607D8B"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feedbackOpcion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#D32F2F"
            android:layout_marginBottom="20dp" />

        <!-- Opción 3 -->
        <Button
            android:id="@+id/btnOpcion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colgar y verificar con otra persona de confianza"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:backgroundTint="#607D8B"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feedbackOpcion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#388E3C"
            android:layout_marginBottom="36dp" />

        <!-- Botón evaluación -->
        <Button
            android:id="@+id/btnIrEvaluacion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Ir a la Evaluación 3"
            android:textSize="22sp"
            android:backgroundTint="#00796B"
            android:textColor="#FFFFFF"
            android:padding="18dp"
            android:layout_marginBottom="40dp" />
    </LinearLayout>
</ScrollView>
