<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"
    android:padding="32dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Separador superior -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!-- TÍTULO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Evaluación - Lección 2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="36dp" />

        <!-- Pregunta 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. ¿Qué busca provocar una voz clonada?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Confianza, miedo o urgencia"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Risa o diversión"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb1c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Dudas sobre tecnología"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp" />

        <!-- Pregunta 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. ¿Qué debe hacer una persona al recibir una llamada sospechosa?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Dar la información y colgar"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Colgar y verificar con un familiar"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb2c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Responder todo lo que le pidan"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp" />

        <!-- Pregunta 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. ¿Qué tipo de frases usan los estafadores con voz clonada?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb3a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Frases amorosas y lentas"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Frases confusas y técnicas"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb3c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Frases urgentes y emocionales"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp" />

        <!-- Pregunta 4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. ¿Por qué es riesgoso confiar solo en el sonido de la voz?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb4a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Porque puede haber ruido de fondo"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb4b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Porque puede ser una imitación por IA"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb4c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Porque no es buena señal"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp" />

        <!-- Pregunta 5 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. ¿Qué no se debe compartir por teléfono ante una llamada sospechosa?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb5a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Nombre de la mascota"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb5b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Número de tarjeta o datos personales"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb5c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Horario de comida"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp" />

        <!-- Pregunta 6 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. ¿Qué acción es más segura si se recibe una solicitud extraña de un familiar?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb6a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Mandar el dato y luego preguntar"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb6b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Seguir conversando sin dar nada"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb6c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Colgar y llamar al familiar directamente"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp" />

        <!-- Pregunta 7 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. ¿Cuál de las siguientes situaciones es típica en un fraude con voz clonada?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb7a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Le piden su dirección para mandarle un regalo"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb7b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Le dicen que ganó un premio y debe reclamarlo"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb7c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Le piden datos personales usando la voz de un familiar en una “emergencia”"
                android:layout_marginTop="30dp"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp" />

        <!-- Botón Finalizar -->
        <Button
            android:id="@+id/btnFinalizar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finalizar evaluación"
            android:textSize="22sp"
            android:backgroundTint="#00796B"
            android:textColor="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="36dp" />

        <!-- RESULTADO -->
        <TextView
            android:id="@+id/tvResultado2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:layout_marginBottom="12dp" />

        <!-- LEYENDA DE PROGRESO -->
        <TextView
            android:id="@+id/tvProgresoGuardado2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#555555"
            android:layout_marginBottom="16dp" />

        <!-- IMAGEN -->
        <ImageView
            android:id="@+id/imgRetroalimentacion"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="40dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>