<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"
    android:padding="32dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Evaluación - Lección 3"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="36dp" />

        <!-- Pregunta 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. ¿Qué puede indicar que una voz ha sido clonada?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Que la llamada es larga"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Que repite frases sin responder bien"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb1c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Que se escucha ruido de fondo"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp" />

        <!-- Pregunta 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Si una persona que llama se niega a responder preguntas personales, ¿qué puede estar ocurriendo?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Está ocupada"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Tiene mala señal"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb2c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Puede ser una voz clonada"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp" />

        <!-- Pregunta 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. ¿Cuál de las siguientes frases es sospechosa?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb3a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) “Abuelita, ¿me puedes contar cómo está el perrito?”"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) “Hola, no puedo hablar mucho, solo mándame dinero urgente.”"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb3c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) “¿Cómo están todos en casa?”"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp" />

        <!-- Pregunta 4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. ¿Qué debe hacer si la llamada suena rara, aunque la voz sea conocida?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb4a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Ignorar su intuición"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb4b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Pedir hablar con otra persona"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb4c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Colgar y confirmar con alguien de confianza"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp" />

        <!-- Pregunta 5 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. ¿Cuál es una señal común de una llamada fraudulenta con voz clonada?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb5a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Que dura poco"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb5b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Que suena exactamente como un familiar"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb5c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Que hay presión para actuar rápido"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp" />

        <!-- Pregunta 6 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. ¿Por qué es útil hacer preguntas personales en una llamada sospechosa?"
            android:textSize="22sp"
            android:textColor="#4E342E"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_extrabold" />

        <RadioGroup
            android:id="@+id/rgPregunta6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb6a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Para hacer la llamada más larga"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb6b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Para detectar si la persona responde naturalmente"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb6c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Para entretener al estafador"
                android:textSize="22sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/feedback6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#006400"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="100dp" />



        <!-- Botón Finalizar -->
        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finalizar evaluación"
            android:textSize="22sp"
            android:backgroundTint="#00796B"
            android:textColor="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="36dp" />


        <!-- RESULTADO -->
        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:layout_marginBottom="12dp" />

        <!-- LEYENDA DE PROGRESO -->
        <TextView
            android:id="@+id/tvProgresoGuardado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#555555"
            android:layout_marginBottom="16dp" />

        <!-- IMAGEN -->
        <ImageView
            android:id="@+id/imgRetroalimentacion"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="40dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
