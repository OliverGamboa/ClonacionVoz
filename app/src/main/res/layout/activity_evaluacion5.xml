<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"
    android:padding="32dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Evaluación - Lección 5"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:gravity="center"
            android:layout_marginBottom="36dp" />

        <!-- Pregunta 1 -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="1. ¿Cuál fue el error principal del usuario al usar la app “Feliz Cumpleaños con Tu Voz”?" android:textSize="22sp" android:textColor="#4E342E" android:layout_marginBottom="8dp" android:fontFamily="@font/nunito_extrabold" />
        <RadioGroup android:id="@+id/rgPregunta1" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <RadioButton android:id="@+id/rb1a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="A) No hablar con entusiasmo" android:textSize="22sp" />
            <RadioButton android:id="@+id/rb1b" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="B) No verificar si la app era confiable" android:textSize="22sp" />
            <RadioButton android:id="@+id/rb1c" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="C) No guardar bien su celular" android:textSize="22sp" />
        </RadioGroup>
        <TextView android:id="@+id/feedback1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:textSize="20sp" android:textColor="#006400" android:layout_marginTop="15dp" android:layout_marginBottom="24dp" />

        <!-- Pregunta 2 -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="2. ¿Qué hizo la app fraudulenta después de grabar la voz del usuario?" android:textSize="22sp" android:textColor="#4E342E" android:layout_marginBottom="8dp" android:fontFamily="@font/nunito_extrabold" />
        <RadioGroup android:id="@+id/rgPregunta2" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <RadioButton android:id="@+id/rb2a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="A) Eliminó los audios" android:textSize="22sp" />
            <RadioButton android:id="@+id/rb2b" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="B) Reenvió saludos a los contactos" android:textSize="22sp" />
            <RadioButton android:id="@+id/rb2c" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="C) Guardó la voz y la usó para cometer fraudes" android:textSize="22sp" />
        </RadioGroup>
        <TextView android:id="@+id/feedback2" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:textSize="20sp" android:textColor="#006400" android:layout_marginTop="15dp" android:layout_marginBottom="24dp" />

        <!-- Pregunta 3 -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="3. ¿Qué se debe hacer antes de permitir que una app grabe la voz?" android:textSize="22sp" android:textColor="#4E342E" android:layout_marginBottom="8dp" android:fontFamily="@font/nunito_extrabold" />
        <RadioGroup android:id="@+id/rgPregunta3" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <RadioButton android:id="@+id/rb3a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="A) Revisar si la app es confiable y tiene buenas opiniones" android:textSize="22sp" />
            <RadioButton android:id="@+id/rb3b" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="B) Presionar 'Aceptar' rápidamente" android:textSize="22sp" />
            <RadioButton android:id="@+id/rb3c" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="C) Confiar si la app tiene colores bonitos" android:textSize="22sp" />
        </RadioGroup>
        <TextView android:id="@+id/feedback3" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:textSize="20sp" android:textColor="#006400" android:layout_marginTop="15dp" android:layout_marginBottom="24dp" />

        <!-- Pregunta 4 -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="4. ¿Qué es una señal clara de que una app podría ser fraudulenta?" android:textSize="22sp" android:textColor="#4E342E" android:layout_marginBottom="8dp" android:fontFamily="@font/nunito_extrabold" />
        <RadioGroup android:id="@+id/rgPregunta4" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <RadioButton android:id="@+id/rb4a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="A) Que tenga pocas descargas y pida permisos innecesarios" android:textSize="22sp" />
            <RadioButton android:id="@+id/rb4b" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="B) Que funcione muy rápido" android:textSize="22sp" />
            <RadioButton android:id="@+id/rb4c" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="C) Que tenga música de fondo" android:textSize="22sp" />
        </RadioGroup>
        <TextView android:id="@+id/feedback4" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:textSize="20sp" android:textColor="#006400" android:layout_marginTop="15dp" android:layout_marginBottom="24dp" />

        <!-- Pregunta 5 -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="5. ¿Qué podría haber evitado el fraude que sufrió el usuario?" android:textSize="22sp" android:textColor="#4E342E" android:layout_marginBottom="8dp" android:fontFamily="@font/nunito_extrabold" />
        <RadioGroup android:id="@+id/rgPregunta5" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <RadioButton android:id="@+id/rb5a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="A) Tener más audios públicos en redes" android:textSize="22sp" />
            <RadioButton android:id="@+id/rb5b" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="B) Compartir la app con sus familiares" android:textSize="22sp" />
            <RadioButton android:id="@+id/rb5c" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="C) No instalar apps sin investigar" android:textSize="22sp" />
        </RadioGroup>
        <TextView android:id="@+id/feedback5" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:textSize="20sp" android:textColor="#006400" android:layout_marginTop="15dp" android:layout_marginBottom="40dp" />

        <!-- BOTÓN FINALIZAR -->
        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finalizar evaluación"
            android:textSize="22sp"
            android:backgroundTint="#00796B"
            android:textColor="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="36dp" />

        <!-- RESULTADO -->
        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:layout_marginBottom="12dp" />

        <!-- PROGRESO GUARDADO -->
        <TextView
            android:id="@+id/tvProgresoGuardado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#555555"
            android:layout_marginBottom="16dp" />

        <!-- IMAGEN -->
        <ImageView
            android:id="@+id/imgRetroalimentacion"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="40dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
